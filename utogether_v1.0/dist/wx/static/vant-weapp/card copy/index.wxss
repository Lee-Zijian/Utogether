@import '../common/index.wxss';
.van-card{position:relative;
    width:320px;
    height:180px;
    box-sizing:border-box;
    box-shadow: 0px 0px 2px 2px #cccccc;
    padding:5px 10px;
    padding:var(--card-padding,5px 10px);
    font-size:12px;
    font-size:var(--card-font-size,12px);
    color:#323233;
    color:var(--card-text-color,#323233);
    background-color:#ffffff;
    background-color:var(--card-background-color,#ffffff)}
.van-card__header{display:-webkit-flex;display:flex;flex-flow:row}
.van-card__header--center{-webkit-align-items:center;
    display:flex;
    flex-flow:row;
    align-items:center;
    -webkit-justify-content:center;
    justify-content:center}
.van-card__thumb{position:relative;
    -webkit-flex:none;
    flex:none;width:30px;
    width:var(--card-thumb-size,30px);
    height:30px;
    height:var(--card-thumb-size,30px);
    margin-right:2px;
    margin-right:var(--padding-xs,2px)}
.van-card__thumb:empty{display:none}
.van-card__img{width:100%;height:100%}
.van-card__content{position:relative;    
    -webkit-flex:1;
    flex:1;
    min-width:0}
.van-card__desc,.van-card__title{word-wrap:break-word}
.van-card__title{font-weight:700;
    padding-top:10px;
    font-size:20px;
    text-align:center;
    line-height:16px;
    line-height:var(--card-title-line-height,16px)}
.van-card__desc{line-height:40px;
    line-height:var(--card-desc-line-height,40px);
    font-size:14px;
    text-align:center;
    color:#8f8b8b;
    color:var(--card-desc-color,#8f8b8b)}
.van-card__desc2{line-height:4px;
    line-height:var(--card-desc-line-height,4px);
    font-size:14px;
    text-align:center;
    color:#8f8b8b;
    color:var(--card-desc-color,#8f8b8b)}
.van-card__desc3{line-height:40px;
    line-height:var(--card-desc-line-height,40px);
    font-size:12px;
    text-align:center;
    color:#8f8b8b;
    color:var(--card-desc-color,#8f8b8b)}
.van-card__thumb2{position:relative;
    -webkit-flex:none;
    flex:none;width:20px;
    width:var(--card-thumb-size,20px);
    height:20px;
    height:var(--card-thumb-size,20px);
    margin-right:8px;
    margin-right:var(--padding-xs,8px)}
.van-card__thumb2:empty{display:none}
.van-card__img2{width:100%;height:100%}
.van-card__thumb3{position:relative;
    width:20px;
/*    padding-top:134px; */
    width:var(--card-thumb-size,20px);
    height:20px;
    height:var(--card-thumb-size,20px);
    margin-right:3px;
    margin-right:var(--padding-xs,3px)}
.van-card__thumb3:empty{display:none}
.van-card__participants{
    position:relative;
    display:flex;
    flex-flow:row;
    margin-left:0px;
    margin-left:var(--padding-xs,0px)
}
.van-card__img3{width:100%;height:100%}
.van-card__thumb4{position:relative;
    width:20px;
    width:var(--card-thumb-size,20px);
    height:20px;
    height:var(--card-thumb-size,20px);
    margin-right:10px;
    margin-right:var(--padding-xs,10px)}
.van-card__thumb4:empty{display:none}
.van-card__img4{width:100%;height:100%}
.van-card__button4{
    position:relative;
    display:flex;
    flex-flow:row;
    margin-right:0px;
    margin-right:var(--padding-xs,0px)
}
.van-card__desc4{line-height:2px;
    line-height:var(--card-desc-line-height,2px);
    margin-top: 10px;
/*    padding-top:153px;*/
    font-size:10px;
    text-align:left;
    color:#8f8b8b;
    color:var(--card-desc-color,#8f8b8b)}
.van-card__bottom{line-height:20px}
.van-card__price{display:inline-block;
    font-weight:700;
    color:#ee0a24;
    color:var(--card-price-color,#ee0a24)}
.van-card__origin-price{display:inline-block;
    margin-left:5px;
    text-decoration:line-through;
    font-size:10px;font-size:var(--card-origin-price-font-size,10px);
    color:#646566;
    color:var(--card-origin-price-color,#646566)}
.van-card__num{float:right}
.van-card__tag{position:absolute;top:2px;left:0}
.van-card__footer{
    display:flex;
    flex-flow:row;
    width:100%;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
    text-align:right}